  <%= form_tag charges_path do %>
    <article>
      <label class="amount">
          <span>Tutor Name : <%= @lesson
        .tutor.first_name.capitalize+"  "+@lesson.tutor.  last_name.capitalize %></span>
        <br>
        <br>
        <span>Class Name : <%= @lesson.name %> </span>
        <br>
        <br>
        <span>Class Address : <%= @lesson.address %> </span>
        <br>
