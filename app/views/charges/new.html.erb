<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $<%= @lesson.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @lesson.price %>"></script>
  <%= hidden_field_tag "lesson_id" , params[:id]%>
  <%= hidden_field_tag "schedule_id" , params[:schedule_id]%>
  <%= hidden_field_tag "timing_id" , params[:timing_id]%>
<% end %>