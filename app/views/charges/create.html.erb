<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Thanks for Payment :</h1>
      <table class="table table-striped table-hover">
        <tr>
          <th>Tutor Name</th>
          <td><%= @pay.lesson.tutor.first_name.capitalize+"  "+@pay.lesson.tutor.  last_name.capitalize %></td>
        </tr>
        <tr class="info">
          <th>Class Name</th>
          <td><%= @pay.lesson.name %></td>
        </tr>
        <tr class="Warning">
          <th>Student Name</th>
          <td><%= @pay.student.first_name.capitalize+"  "+@pay.student.last_name.capitalize %></td>
        </tr>
        <tr class="info">
          <th>Time</th>
          <td><%=@pay.timing.start_time.strftime("%I:%M %p")%></td>
        </tr>
        <tr class="success">
          <th>Date</th>
          <td><%= @pay.timing.day.date %></td>
        </tr>
        <tr class="danger">
          <th>Day</th>
          <td><%= @pay.timing.day.name%></td>
        </tr>
        <tr class="success">
          <th>Class Address</th>
          <td><%= @pay.lesson.address%>  </td>
        </tr>
        <tr class="danger">
          <th></th>
          <td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@pay.lesson.latitude}%2C#{@pay.lesson.longitude}" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>