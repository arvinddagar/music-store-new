.class_block
  .row-fluid
    br
    .span3
      -if lesson.pictures.first.present?
        = image_tag lesson.pictures.first.image.url,:style=>"width:102%"
      - else
        = image_tag "no-image.png",:style=>"width:102%"
    .span5
      h3
        =link_to lesson.name, lesson_path(lesson)
      br
      b == truncate(lesson.description, length: 150, omission: '... (continued)')
  	  br
      b
      | Address : 
      =lesson.address
      br
  	  b
      | Neighbourhood : 
      =lesson.neighbourhood
      br
      b
      | Rating : 
      =lesson.avg_rate.to_f
    .span2
      =number_to_currency(lesson.price)
    .span2
      =link_to "book Now" ,book_class_path(lesson), :class => "btn btn-danger"
      / button.btn.btn-success type="button"  Book Now
      br
      br
      | people allowed :
      =lesson.maximum_people
br
br 