<%if current_student.complete?%>
<%=  render 'application/student_dashboard_partial' %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="well">
        <%= form_for @student , url: complete_stu_path, :html => { :id => "student_profile_form" } do |f|%>
          <fieldset>
            <% if current_student.complete? %>
              <legend><%=current_student.first_name.capitalize+"  "+current_student.last_name.capitalize %>'s profile </legend>
            <% else %>
              <legend>Student's Profile</legend>
            <% end %>
            <div class="form-group col-lg-12">
              <label class="control-label" for="focusedInput">Address</label>
              <%= f.text_area :address,:class=>"form-control" %>
            </div>
            <div class="form-group col-lg-12">
              <label class="control-label" for="focusedInput">Choose Image</label>
              <%= f.file_field :image %>
            </div>
            <% if @student.image_file_name? %>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Current Image</label>
                <div class="col-sm-10">
                  <%= image_tag @student.image.url,:class => "img-responsive", :style=>"width:25%,height:25%;" %>
                </div>
              </div>
            <% end %>
            <div class="form-group col-lg-12">
              <%= submit_tag "save", :class=> "btn btn-primary",:style=>"width:20%;margin-top:5%;"%>
            </div>
          </fieldset>
        <%end%>
      </div>  <!-- end of well -->
    </div>  <!-- end of col-lg-6 -->
    <div class="clearfix" style="height:50px;"></div>
  </div>  <!-- end of row -->
</div>