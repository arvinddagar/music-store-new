    <%= form_for @student do |f| %>
      <% if @student.errors.any? %>
        <div class="alert.alert-error">
          <h4>
            <%= pluralize(@student.errors.count, "error") %>
          </h4>
          <ul>
            <% @student.errors.full_messages.each do |msg| %>
              <li>
                <%=msg%>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.fields_for :user do |user| %>
        <label>Email</label>
        <%=user.email_field :email, autofocus: true,:class=>"input-block-level",  required: true%>
        <label>Password</label>
        <%= user.password_field :password, autocomplete: "off",:class=>"input-block-level",  required: true%>
        <%=user.hidden_field :user_type,:value=>"false" %>
        <label>FirstName</label>
        <%=f.text_field :first_name, autocomplete: "off",:class=>"input-block-level",  required: true%>
        <label>LastName</label>
        <%=f.text_field :last_name, autocomplete: "off",:class=>"input-block-level",  required: true%>
        <br>
        <%= f.button class: "btn",:style=>"margin-bottom:20px;" %>
<!--         <a href="#" class=" btn  ">Register Now&nbsp;&nbsp;&nbsp;<i class="fa fa-chevron-sign-right"></i></a> -->
      <% end %>
    <% end %>