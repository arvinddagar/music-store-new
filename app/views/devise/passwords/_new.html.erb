
<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :id => "forgot_password", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true , :class => "input-block-level",  required: true%>
<br/>
 <%= f.submit "Recover Password", :class=>"btn" %>
<% end %>

