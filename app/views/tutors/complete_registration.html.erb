<%if current_tutor.complete?%>
  <%=  render 'application/tutor_dashboard_partial' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="well">
        <%= form_for @tutor , url: complete_path, :html => { :id => "tutor_profile_form", :class => "form-horizontal" } do |f|%>
          <fieldset>
            <% if current_tutor.complete? %>
              <legend><%=current_tutor.first_name.capitalize+"  "+current_tutor.last_name.capitalize %>'s profile </legend>
            <% else %>
              <legend>Tutor's Profile</legend>
            <% end %>
            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Description</label>
              <div class="col-lg-10">
                <%= f.text_area :description,:class=>"form-control",:rows=>5 %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">About Me</label>
              <div class="col-lg-10">
                <%= f.text_area :about_me ,:class=>"form-control",:rows=>5%>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Duration</label>
              <div class="col-lg-10">
                <%= f.text_area :duration ,:class=>"form-control",:rows=>1%>
              </div>
            </div>

            <div class="form-group">
              <label  for="textarea" class="col-lg-2 control-label">Skills</label>
              <div class="col-sm-10">
                <%= f.text_area :skills,:class=>"form-control",:rows=>3 %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Technical Philoshphy</label>
              <div class="col-lg-10">
                <%= f.text_area :teaching_philosophy,:class=>"form-control",:rows=>3 %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Credentials and Affiliations</label>
              <div class="col-lg-10">
                <%= f.text_area :cre ,:class=>"form-control",:rows=>3%>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Age Groups</label>
              <div class="col-lg-10">
                <%= f.text_field :age_group,:class=>"form-control",:rows=>3, :style=>"height:35px;" %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Instuments        </label>
              <div class="col-lg-10">
                <%= f.text_field :instruments,:rows=>1,:class=>"form-control", :style=>"height:35px;" %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Experience</label>
              <div class="col-lg-10">
                <%= f.text_field :experience,:class=>"form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Address</label>
              <div class="col-lg-10">
                <%= f.text_field :address,:class=>"form-control" %>
              </div>
            </div>
            
            <% if @tutor.image_file_name? %>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Current Image</label>
                <div class="col-sm-10">
                  <%= image_tag @tutor.image.url,:style=>"width:30%" %>
                </div>
              </div>
            <% end %>

            <div class="form-group">
              <label for="exampleInputFile" class="col-lg-2 control-label">Choose Image</label>
              <div class="col-lg-10">
                <%= f.file_field :image %>
              </div>
            </div>

            <div class="form-group">
              <label for="exampleInputFile" class="col-lg-2 control-label">
                <%= submit_tag "save", :class=> "btn btn-info "%>
            </label>
            </div>
          </fieldset>
        <%end%>               
      </div>  <!-- end of well -->
      <div class="clearfix" style="height:50px;"></div>
    </div>  <!-- end of col-lg-6 -->
  </div>  <!-- end of row -->
</div>  <!-- end of container -->