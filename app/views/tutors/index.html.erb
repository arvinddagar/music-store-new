<%= render 'application/tutor_dashboard_partial' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Welcome <%=" "+current_tutor.first_name.capitalize+"  "+current_tutor.last_name.capitalize %> :</h1>
      </div>
      <% if !@lessons.empty? %>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Active Classes</th>
              <th>Date</th>
              <th>Time</th>
              <th>Location</th>
              <th>Edit Classes</th>
              <th>Edit Schedule</th>
            </tr>
          </thead>
          <tbody>
            <% @lessons.each do |lesson| %>
              <tr>
                <td>
                  <%=lesson.name%>
                </td>
                <td>
                  <%=lesson.created_at.strftime("%d-%b-%y") %>
                </td>
                <td>
                  <%=lesson.created_at.strftime("%H : %M") %>
                </td>
                <td>
                  <%=lesson.address %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_lesson_path(lesson)%>
                </td>
                <td>
                  <%=link_to 'Edit', edit_schedule_path(lesson)%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <center><h2>No Lesson available</h2></center>  
      <% end %>
    </div>
  </div>
  <center>
    <%= paginate @lessons, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-sm" %>
  </center>
  <div class="clearfix" style="height:50px;"></div>
</div>